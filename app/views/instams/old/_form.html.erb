<p id="notice"><%= notice %></p>

<%= form_for(@instam) do |f| %>
  <% if @instam.errors.any? %>
    <div id="error_explanation">
      <h2><%= @instam.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @instam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "画像を投稿する", new_instam_path %>